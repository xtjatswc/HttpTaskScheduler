@model List<DateTimeOffset>

@{
    ViewData["Title"] = "Next Fire Times";
}

<h2>Next Fire Times for @ViewBag.TaskName</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Next Execution Time</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].ToString("yyyy-MM-dd HH:mm:ss zzz")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>